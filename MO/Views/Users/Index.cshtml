@{
    ViewBag.Title = "Index";
}



@if (ViewBag.displayMenu == "Yes")
{
    <h1>Welcome <strong>@ViewBag.Name</strong></h1>
    using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { id = "changePasswordForm" }))
    {

        @Html.AntiForgeryToken()
        <a href="javascript:document.getElementById('changePasswordForm').submit()">Cambiar Contraseña</a>

    }

    <a href="~/Home/Create">Crear Tutorial</a>

}
else
{
    <h2>Welcome <strong>@ViewBag.Name</strong></h2>
    using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { id = "changePasswordForm" }))
    {

        @Html.AntiForgeryToken()
        <a href="javascript:document.getElementById('changePasswordForm').submit()">Cambiar Contraseña</a>

    }
}  