@model  MOModel.Seccion
@{
    ViewBag.Title = "Seccion";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/site")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<body>
    <div>
        @foreach (var tutorial in Model.Tutorial)
        {
            <div class="tutorial-item">
                <div class="row">
                    <div class="col-md-4">
                        <img class="tutorialImg" src="@tutorial.Imagen" />
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="@Url.Action("GetTutorialById", "Home" , new { id=tutorial.Id })">@Html.DisplayFor(modelItem => tutorial.Titulo)</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-12"><p>Dificultad: @tutorial.Dificultad</p></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <p>Tiempo: @tutorial.Tiempo</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                @tutorial.Descripcion
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
    <style>
        .tutorialImg {
            max-width: 350px;
        }
    </style>
</body>