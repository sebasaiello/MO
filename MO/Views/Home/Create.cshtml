<script type="text/javascript">
    var clicks = 0;

    $('#addPaso').click(function (event) {
        event.preventDefault();

        var html = '<div class="pasoInput"><h3>Paso ' + (clicks + 1) + '</h3><label for="Paso[' + clicks + '].Titulo">Titulo</label><div class="form-group"><input class="form-control text-box single-line" type="text" name="Paso[' + clicks + '].Titulo" /></div><label for="Paso[' + clicks + '].Descripcion">Descrpicion</label><div class="form-group"><textarea class="form-control text-box" rows="5" cols="50" type="text" name="Paso[' + clicks + '].Descripcion"></textarea></div><label for="Paso[' + clicks + '].Imagen">Imagen</label><div class="form-group"><input class="form-control text-box single-line" type="text" name="Paso[' + clicks + '].Imagen" /></div></div>';

        $('#crearPasos').append(html);
    });

    function updateClickCount() {
        document.getElementById("clickCount").innerHTML = clicks;
